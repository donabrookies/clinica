{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    }
  ],
  "env": {
    "SUPABASE_URL": "SUA_URL_DO_SUPABASE",
    "SUPABASE_KEY": "SUA_SERVICE_ROLE_KEY_DO_SUPABASE",
    "ADMIN_EMAIL": "admin@clinica.com",
    "JWT_SECRET": "sua-chave-secreta-aqui"
  }
}